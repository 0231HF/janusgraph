<assembly>
    <id>all-standalone</id>
    <baseDirectory>/</baseDirectory>

    <formats>
        <format>dir</format>
    </formats>

    <componentDescriptors>
        <componentDescriptor>component/all-configs.xml</componentDescriptor>
    </componentDescriptors>

    <fileSets>
        <fileSet>
            <directory>src/assembly/static/bin</directory>
            <outputDirectory>/bin</outputDirectory>
            <includes>
                <include>gremlin.sh</include>
                <include>gremlin.bat</include>
            </includes>
        </fileSet>
    </fileSets>

    <dependencySets>
        <!-- Entire jar dependency graph -->
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
    </dependencySets>
</assembly>
