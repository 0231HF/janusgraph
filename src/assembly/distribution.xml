<assembly>
    <id>distribution</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <fileMode>0775</fileMode>
            <directory>src/main/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.sh</include>
                <!--<include>*.bat</include>-->
            </includes>
        </fileSet>
        <fileSet>
            <includes>
                <include>bin/*.properties</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src</directory>
        </fileSet>
        <fileSet>
            <directory>target/apidocs</directory>
            <outputDirectory>doc/javadoc</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>target/${project.artifactId}-${project.version}-job.jar</source>
            <outputDirectory>lib</outputDirectory>
        </file>
        <file>
            <source>pom.xml</source>
            <outputDirectory>src</outputDirectory>
        </file>
        <file>
            <source>data/graph-of-the-gods.json</source>
            <outputDirectory>data</outputDirectory>
        </file>
        <file>
            <source>data/graph-example-1.json</source>
            <outputDirectory>data</outputDirectory>
        </file>
        <file>
            <source>LICENSE.txt</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>CHANGELOG.textile</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>NOTICE.txt</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>README.textile</source>
            <outputDirectory>/</outputDirectory>
        </file>
    </files>
</assembly>